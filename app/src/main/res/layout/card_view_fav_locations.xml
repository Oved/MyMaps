<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_layout_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardBackgroundColor="#5C8B9C"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_location"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/title_location"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/item_location"
            android:text="Área"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_location"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/item_location"
            android:layout_toRightOf="@+id/title_location"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="Bogotá" />

        <TextView
            android:id="@+id/title_longitude"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_location"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/item_location"
            android:text="Longitude"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_longitude"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_longitude"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/item_location"
            android:layout_toRightOf="@+id/title_location"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="-74.0498149" />

        <TextView
            android:id="@+id/title_latitude"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/title_location"
            android:text="Latitude"
            android:layout_below="@+id/tv_location"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_latitude"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/tv_location"
            android:layout_toRightOf="@+id/title_location"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="4.6760501" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>